@require '../../theme/colors'

border-side-radius = 0.125rem

.preview
    display flex
    max-width 18rem
    min-width 2rem
    width 100%
    min-height 13.25rem
    color white

    &__column

        &_left  
            width 30%
            border-top-left-radius border-side-radius 

        &_right
            width 70%
            display flex
            border-top-right-radius border-side-radius  

    &__description
        padding 7.5%
        display flex
        flex-direction column
        justify-content center

        ^[0]_news & 
            background-color theme-color2

        ^[0]_event &
            background-color theme-color1

    &__title
        font-family lato-light

        ^[0]_news &
            font-size 1.75rem
            line-height 1.625rem

    &__subtitle
        font-family lato-bold
        text-transform uppercase

        ^[0]_news &
            font-size 0.68rem
            margin-top 0.625rem

        ^[0]_event &
             font-size 0.81rem

    &__info
        text-align left
        font-size 0.68rem
        font-family lato-regular

        ^[0]_news &
            margin-top 0.9375rem

        ^[0]_event &
            margin-top 0.3125rem