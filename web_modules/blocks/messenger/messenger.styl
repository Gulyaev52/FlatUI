@require '../../theme/colors'

.messenger
    width 280px 

    &__header
        display flex
        flex-direction column
        justify-content space-between
        align-items center
        height 115px
        background-color theme-color1

    &__user-name
        margin-top 15px
        font-size 2.12rem
        font-family SourceSansProLight
        color white

    &__user-photo
        position relative
        display flex
        justify-content center
        width 100%
        height 34px
        background-color #46ab9d 

    