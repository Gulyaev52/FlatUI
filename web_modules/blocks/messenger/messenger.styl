@require '../../theme/colors'

.messenger
    max-width 17.5rem
    min-width 12.20rem

    &__header
        display flex
        flex-direction column
        justify-content space-between
        align-items center 
        background-color theme-color1

    &__user-name
        margin 0.9375rem 0
        font-size 2.12rem
        font-family SourceSansProLight
        color white

    &__user-photo
        position relative
        display flex
        justify-content center
        width 100%
        height 2.125rem
        background-color #46ab9d 

    