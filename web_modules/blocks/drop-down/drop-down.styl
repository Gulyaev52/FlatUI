@require '../../theme/colors'

code-chevron-down = '\f078'

.drop-down
    display inline-block
    position relative  
    max-width 18.75rem
    min-width 9.8125rem
    width 100%

    &__button
        height 100%
        width 2.0625rem
        position absolute
        right 0
        border none 
        background-color theme-color1
        pointer-events none
        font-family FontAwesome
        color white

        &:before
            content code-chevron-down
            pointer-events none

    &__select
        height 2rem
        width 100% 
        margin 0
        padding 2% 0.625rem
        border none
        border-radius 0.1875rem
        background-color theme-color3
        color #888888 
        font-size 0.875rem
        font-family SourceSansProRegular 