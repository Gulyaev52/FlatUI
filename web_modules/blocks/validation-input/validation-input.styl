@require '../../colors'

.validation-input
    display flex 
    height 28px

    &__input
        width 208px

    &__message 
        width 75px 
        margin-left 10px 
        font-size 10px
        text-transform uppercase

    &__input:valid ~ &__message_ok
    &__input:invalid ~ &__message_error
        display inline-flex