@require '../../theme/colors'

code-search = '\f002'

.search
    position relative  
    max-width 18.75rem 
    min-width 9.8125rem
    width 100%

    &_error .input
        background-color theme-color2
        color white
        text-overflow ellipsis

    &__button 
        height 100%
        width 2.06rem
        position absolute
        right 0
        border none
        font-family FontAwesome 
        background-color theme-color2
        color white

        &:before 
            content code-search 