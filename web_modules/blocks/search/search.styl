@require '../../theme/colors'

code-search = '\f002'

.search
    position relative  
    display inline-block

    &_error .input
        background-color theme-color2
        color white
        text-overflow ellipsis

    &__button 
        height 100%
        width 33px
        position absolute
        right 0
        border none
        font-family FontAwesome 
        background-color theme-color2
        color white

        &:before 
            content code-search 