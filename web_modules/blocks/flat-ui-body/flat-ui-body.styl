.flat-ui-body
    display flex
    max-width 800px
    min-width 300px 
    margin 0 auto
    flex-direction column
    padding 0 7%

    &__line 
        width 100%
        margin-top 10%

        @media screen and (max-width 671px)
            display flex
            flex-direction column 

    &__columns
        margin-top 10%
        display flex
        justify-content space-between

        @media screen and (max-width 676px)
            flex-direction column
            align-items center