.flat-ui-body
    display flex
    max-width 800px
    min-width 300px 
    margin 0 auto
    flex-direction column
    padding 0 7%

    &__line 
        width 100%
        margin-top 10%

        @media screen and (max-width 671px)
            display flex
            flex-direction column 

    &__column 
        flex-grow 1

        &_left
            float left

        &_right
            float right
    