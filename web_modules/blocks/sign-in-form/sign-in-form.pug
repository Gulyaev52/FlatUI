include ../input/input
include ../button/button

mixin sign-in-form
    form.sign-in-form
        .sign-in-form__login
            +input({
                placeholder: 'Логин',
                type: 'Текст' 
            })
        .sign-in-form__password
            +input({
                placeholder: 'Пароль',
                type: 'password' 
            }) 
        .sign-in-form__button
            +button({ 
                text: 'Войти',
                size: 'big',
                type: 'raised',
                isSubmit: true
            })
