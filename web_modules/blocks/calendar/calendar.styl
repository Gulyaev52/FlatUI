@require '../../theme/colors'

header-font-color = white

code-angel-left = "\f104"
code-angel-right = "\f105"

.calendar
    max-width 16.875rem
    
    &__day
        display block
        width 100%
        padding-top 1.2rem
        border none
        font-size 5rem
        background-color theme-color2
        color header-font-color
        font-family LatoLight
        text-align center

    & .ui-datepicker
        width 100%
        padding 0
        border none

        & .ui-datepicker-header 
            border none
            border-radius 0
            padding 0
            background-color #d54c2c
            color header-font-color
            font-family LatoLight
            font-size 1.5rem

            & .ui-datepicker-title
                
                & .ui-datepicker-year
                    display none

            & .ui-datepicker-prev
            & .ui-datepicker-next
                display flex
                justify-content center
                align-items center
                border none 
                color header-font-color

            & .ui-datepicker-prev-hover
            & .ui-datepicker-next-hover
                border none
                border-radius 0
                background-color inherit

            & .ui-datepicker-prev:before
            & .ui-datepicker-next:before 
                display block
                margin-bottom 0.3125rem
                font-family FontAwesome 

            & .ui-datepicker-prev:before
                content code-angel-left

            & .ui-datepicker-next:before
                content code-angel-right

        & .ui-datepicker-calendar
            margin 0 

            & thead 
                font-size 0.75rem
                background-color theme-color2
                color header-font-color
                font-family LatoBlack
                text-transform uppercase
                font-weight bold

                & th
                    width 2.375rem
                    height 1.6875rem

            & tbody
                background-color #f2f2f2 

                & td 
                    border 1px solid white

                    & .ui-state-default
                        text-align center
                        vertical-align center
                        color #868686
                        font-family SourceSansProRegular
                        font-size 1.3rem
                        border none 

                    & .ui-priority-secondary
                        color #b5aaaa

                    & .ui-state-highlight
                    & .ui-state-active
                        border none
                        background-color theme-color2
                        color white 

    &__btn-today
        width 100%
        height 3.0625rem
        padding 0.9375rem 1.25rem
        text-transform uppercase
        font-family LatoBlack
        text-align left 
        cursor pointer
        border none
        color #888888