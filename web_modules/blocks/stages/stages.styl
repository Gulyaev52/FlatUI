@require '../../theme/colors'
@require '../../theme/mixins'

.stages
    display flex 
    align-items center
    position relative 
    width 100%
    min-width 10.40rem 

    &__progress-bar 
        flex-grow 1
        height 0.3125rem
        background-color theme-color3

    &__progress
        height 100%
        width 0
        background-color theme-color2

    &__items 
        display flex
        justify-content space-between
        align-items center
        position absolute  
        left 0
        right 0

    &__stage
        display flex
        justify-content center
        align-items center
        circle(1.8125rem)
        font-size 0.875rem
        font-family lato-bold 

        &_uncompleted
            background-color theme-color3
            color #888888

        &_completed
            background-color theme-color2
            color white