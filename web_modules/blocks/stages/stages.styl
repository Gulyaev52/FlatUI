@require '../../theme/colors'
@require '../../theme/mixins'

.stages
    display flex 
    align-items center
    position relative
    width 100%
    height 29px

    &__progress-bar 
        flex-grow 1
        height 5px
        background-color theme-color3

    &__progress
        height 100%
        width 0
        background-color theme-color2

    &__items 
        display flex
        justify-content space-between
        align-items center
        position absolute  
        left 0
        right 0

    &__stage
        display flex
        justify-content center
        align-items center
        circle(29px)
        font-size 0.875rem
        font-family LatoBlack 

        &_uncompleted
            background-color theme-color3
            color #888888

        &_completed
            background-color theme-color2
            color white