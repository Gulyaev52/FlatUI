mixin stages({ length=1, progress=1 })
    .stages.js-stages(data-length = length, data-progress = progress)
        .stages__progress-bar
            .stages__progress.js-stages__progress
        .stages__items
            -for (let stage = 1; stage <= length; stage += 1)
                -stageState = stage <= progress ? 'completed' : 'uncompleted'
                span.stages__stage(class = `stages__stage_${stageState}`)= stage