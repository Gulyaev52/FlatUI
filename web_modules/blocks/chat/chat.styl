messageMargin = 20px 

codeMessage = '\f075'
codePhoto = '\f030'

.chat
    display inline-block
    width 100% 
    padding 10px 25px 25px 25px
    background-color #f2f2f2

    &__item
        margin-top 15px

    &__message
        margin-top 10px

        &_incomming
            margin-right messageMargin

        &_outgoing
            margin-left messageMargin

    &__links
        display flex
        justify-content space-between

    &__link
        font-size 23px
        font-family FontAwesome
        color #8e8d8d

        &_message:before
            content codeMessage

        &_photo:before
            content codePhoto

    &__input 
        height 70px
        width 100%
        padding 15px 24px 15px 20px
        border 3px solid white  
        resize none

    &__reply-btn
        width 100% 


