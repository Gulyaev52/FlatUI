@require '../../mixins'
@require '../../colors'

.user-profile   
    position relative
    display inline-flex  
    align-items center

    &__photo
        circle(92px)
        margin-right 10px
        border 4px solid themeColor3

    &__tooltip   
        position absolute 
        left 100%
        padding 10px 37px
        min-width 175px

    &__photo:hover ~ &__tooltip
        display inline-flex

    &__name
        font-size 18px
        font-family LatoRegular
        text-transform capitalize

        &_theme_default
            color white

        &_theme_gray
            color themeColor2

    &__profession
        font-size 11px
        font-family LatoBlack
        text-transform uppercase

        &_theme_default
            color white

        &_theme_gray
            color #4f4f4f

    &__socials
        width 100%
        display flex
        margin-top 10px
        justify-content space-between 
        align-items center

    &__social

        &_theme_default
            color white

        &_theme_gray
            color #757575
