@require '../../theme/mixins'
@require '../../theme/colors'

.user-profile   
    position relative
    display inline-flex  
    align-items center

    &__photo 
        margin-right 10px

    &__name
        font-size 1.125rem
        font-family LatoRegular
        text-transform capitalize

        ^[0]_default &
            color white  

        ^[0]_gray &
            color theme-color2

    &__profession
        font-size 0.68rem
        font-family LatoBlack
        text-transform uppercase

        ^[0]_default &
            color white

        ^[0]_gray &
            color #4f4f4f

    &__socials
        margin-top 10px 
        width 100% 