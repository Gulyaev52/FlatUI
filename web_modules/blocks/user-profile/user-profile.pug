include ../avatar/avatar
include ../arrow-box/arrow-box
include ../socials/socials


mixin user-profile(options)
    -
        const {
            name, 
            profession,
            theme="default", 
            photo="user-icon.png", 
            profileFacebook='/mock-address',
            profileTwitter='/mock-address',
            profileDribble='/mock-address'
        } = options || {};
    .user-profile(class = `user-profile_${theme}`)
        .user-profile__photo
            +avatar({ photo })
        .user-profile__info
            +arrow-box({ theme, arrowPosition: "left", type: 'profile-info' }) 
                    span.user-profile__name= name 
                    span.user-profile__profession= profession
                    span.user-profile__socials
                        -const socialsInfo = [
                        -    { name: "facebook", theme, href: profileFacebook, target: '_blank' }, 
                        -    { name: "twitter", theme, href: profileTwitter, target: '_blank' }, 
                        -    { name: "dribble", theme, href: profileDribble, target: '_blank' } 
                        -]
                        +socials({ socialsInfo })