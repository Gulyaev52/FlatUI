.section 

    &__title
        font-size 18px
        text-transform uppercase
        text-align center
        color #4f4f4f
        font-family LatoBlack

    &__content  
        margin-top 5%

    &__row 
        display flex
        justify-content space-between
        align-items flex-start
        margin-top 20px

        &_justify-center
            justify-content center

        &:first-child
            margin-top 0

    &__column 
        display flex
        flex-direction column
        flex-grow 1

        &_justify-center
            justify-content center

    &__item  
        margin-left 3%
        display inline-block 

        &:first-child
            margin-left 0
            margin-top 0

