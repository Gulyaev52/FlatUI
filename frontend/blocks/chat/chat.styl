messageMargin = 20px 

.chat
    display inline-block
    width 288px
    padding 10px
    background-color #f2f2f2

    &__item
        margin-top 15px

    &__message
        margin-top 10px

        &_incomming
            margin-right messageMargin

        &_outgoing
            margin-left messageMargin

    &__input 
        padding 15px 24px 15px 20px
        border 3px solid white  
        resize none

    &__reply-btn
        width 100% 


