include ../message/message
include ../button/button

mixin chat({ messages })
    .chat
        .chat__item
            .chat__messages
                each message in messages 
                    .chat__message(class = `chat__message_${message.type}`)
                        +message(message)
        .chat__item
            textarea.input.chat__input
        .chat__item
            +button({ 
                text: "reply", 
                theme: "primary",
                type: "raised",
                size: "big" 
            })(class = "chat__reply-btn")