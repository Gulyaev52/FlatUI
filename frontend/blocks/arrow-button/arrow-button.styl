defaultColor = #4eb7a8
disabledColor = #e5e5e5
primaryColor = defaultColor

.arrow-button
    display flex  
    justify-content center
    align-items center
    circle(50px)
    font-family FontAwesome
    font-size 40px  

    &_left:before
        display inline-block
        padding-right 5px
        content "\f104"

    &_right:before
        display inline-block
        padding-left 5px
        content "\f105"

    &_default
        border: 3px solid defaultColor
        color defaultColor

    &_disabled
        background-color disabledColor
        color white

    &_primary
        background-color primaryColor
        color white