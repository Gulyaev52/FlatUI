@require '../../colors'

codeChevronDown = '\f078'

.drop-down
    position relative
    width 300px 
    height 32px

    &:before
        content codeChevronDown
        display flex
        width 33px
        height 100%
        position absolute
        right 0
        justify-content center
        align-items center
        background-color themeColor1
        font-family FontAwesome
        color white
        pointer-events none