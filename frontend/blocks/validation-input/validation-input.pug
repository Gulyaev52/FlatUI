include ../tooltip/tooltip

mixin validation-input({ placeholder, pattern, textOk, textError })
    .validation-input
        input.input.validation-input__input(
            placeholder = placeholder,
            pattern = pattern
        )
        -const validationOk = [
        -    "validation-input__validation",
        -    "validation-input__validation_ok"
        -]
        -const validationError = [
        -    "validation-input__validation",
        -    "validation-input__validation_error"   
        -]
        +tooltip({ theme: "default" })(class = validationOk)
            p= textOk
        +tooltip({ theme: "warning" })(class = validationError)
            p= textError