.tick-box 
    display inline-block
    font-family FontAwesome
    font-size 0.8em
    cursor pointer

    &__checkbox
        display none

    &__indicator
        display inline-flex
        circle(23px) 
        justify-content center
        align-items center
        background-color themeColor1

    &__indicator:before
        content codeCheck

    &__checkbox ~ &__indicator
        background-color themeColor3
        color #c0c0c0

    &__checkbox:checked ~ &__indicator
        background-color themeColor1
        color white


