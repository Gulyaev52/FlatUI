.user-profile   
    display flex  
    align-items center

    &__photo
        circle(92px)
        margin-right 10px
        border 4px solid #e5e5e5 

    &__photo:hover + &__tooltip
        visibility visible

    &__tooltip 
        visibility hidden
        min-width 175px

    &__name
        font-size 18px
        font-family LatoRegular
        text-transform capitalize

        &_theme_default
            color white

        &_theme_gray
            color #e75735

    &__profession
        font-size 11px
        font-family LatoBlack
        text-transform uppercase

        &_theme_default
            color white

        &_theme_gray
            color #4f4f4f

    &__socials
        width 100%
        display flex
        margin-top 10px
        justify-content space-between 
        align-items center

    &__social

        &_theme_default
            color white

        &_theme_gray
            color #757575
