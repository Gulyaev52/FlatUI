@require '~theme/colors'

.sign-in
    display flex
    flex-direction column 
    align-items center 
    width 100%

    &__title
        color theme-color1
        font-family lato-light

    &__form  
        width 100%
        display flex
        justify-content center
        margin-top 15px

    &__link
        margin-top 15px
        font-size 1.25rem
        text-transform capitalize
        font-weight bold